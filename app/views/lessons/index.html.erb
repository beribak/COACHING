
<div class="index">
 <div class="container">
  <div class="search">
      <%= form_tag lessons_path, id:"bar", class: "bar p-2 my-3 col-12 ", method: :get do %>
        <%= text_field_tag :city,
          params[:city],
          class: "searchTerm ",
          placeholder: "Choose the location"
        %>
        <%= select_tag(:category, options_for_select(Category::CATEGORIES), class: "searchcat") %>
        <%= button_tag type: 'submit', class: "searchButton" do %>
          <i class="fa fa-search"></i>
        <% end %>
      <% end %>
    </div>
  <div class="row ">
    <div class="row col-8">
        <% @lessons.each do |lesson| %>
          <div class="col-6 p-1">
              <%= link_to lesson_path(lesson), class: "card-links rounded", style: "border-radius: 3px;" do %>
                <%= render "shared/card_index", lesson: lesson %>
              <% end %>
          </div>
        <% end %>
    </div>
       <div class="col-4 p-4 rounded">
      <div class="rounded" style="width: 110%; height: 70vh;  position: sticky; top: 88px;"
            data-controller="mapbox"
            data-mapbox-markers-value="<%= @markers.to_json %>"
            data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
  </div>
</div>
