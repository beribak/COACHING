<div class="container" style="margin-top: 80px;">
  <div class="form_new">
    <div class = "d-flex justify-content-between">
      <h4 style="margin-bottom: 30px;">Ask potential student a question:</h4>

    </div>
    <%= simple_form_for @question, url: polymorphic_path([:lesson, @question]) do |f| %>

      <div class="form-inputs">
        <%= f.input :content %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, class: "btn btn-primary w-100 mt-2"%>
      </div>
    <% end %>
  </div>
</div>
