<div class="bg-white p-4 w-100 rounded-3 shadow-lg" style="display: none;" data-answers-target="answerbox">
  <h3 class="mb-3">One more step</h3>

  <%= simple_form_for [q, @answer] do |f| %>
    <p><strong><%= q.content  %></strong></p>
    <%= f.input :content, placeholder: "Your answer", label: false %>
    <%= f.submit :Next, class: "btn btn-lg btn-primary text-white w-100 mt-2" %>
  <% end %>



</div>
